<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-800 text-white p-10 ">

        <div class=" flex justify-end">
            <a class="bg-red-500 px-3 py-2 rounded-md font-sm  " href="/logout">logout</a>
        </div>
<div class="flex item-start  gap-3">
    <a href="/test">upload picture</a>
    <div class="w-10 h-10 overflow-hidden">
        <img class="w-full h-full object-cover " src="/image/upload/<%= user.profilepic %>" alt="this is the gig">
    </div>
    <h1 class="text-white text-3xl bg-blue-500 px-3 py-2 mb-5 mt-5"><span class="font-light">Hello ,</span>
        <%= user.name %>
    </h1>

</div>
       
       
       
       
       

        <h5 class="mb-5 font-light">you can create a new post . </h5>
        <!-- from start  -->

        <form  action="/post" method="post" >
            <textarea  placeholder="what your in mind ?" name="content"
                class="p-3 outline-none block  w-1/3 resize-none bg-transparent border-2 border-zinc-600 rounded-md ">

            </textarea>
            <input type="submit" class="bg-blue-500 block rounded-md w-40 px-3 py-2 mt-4" value="create new post ">

        </form>
        
<!-- posts  -->

        <div class="posts mt-20">
              <h3 clsss="text-zinc-400 " >your posts .</h3>
                      <div class="postcontainer mt-5">

                 <% user.posts.forEach(function(post){  %>

            
                        <div class="post rounded-md w-1/2 p-5 bg-zinc-800 border-2 border-zinc-600 mb-3">
                            <h4 class="text-blue-500 mb-3 "><%= user.username %></h4>

                            <p class="text-sm text-zinc-400 "><%= post.content %></p>

                            <small>
                                <%= post.likes.length %> likes 
                             </small>
                             <div class="btns flex gap-5 mt-10">
                                 <a class="text-blue-500" href="/like/<%= post._id %>">
                                     <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                                 </a>
                                 <a class="text-zinc-400" href="/edit/<%= post._id %>">edit</a>
                                 
                             </div>

                             <form action="/delete/<%= post._id %>" method="get">
                                <a class="text-zinc-400" href="/delete/<%= post._id %>">delete</a>
                             </form>
                             
                        </div>

                    
                 <% }) %>
        </div>







    </div>
</body>

</html>