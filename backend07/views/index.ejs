<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class=" main m-10 text-white">
        <div class="from" class="p-10 ">
            <!-- post the route  -->
            <form action="/create" method="post">
                <!-- input file name title is  -->
                <input class="text-black bg-black block mt-3  rounded w-full
               text-white px-3 py-2 " type="text" placeholder="title create... " name="title">
                <!-- details about the file data  -->
                <textarea class="text-black bg-black block  mt-3 rounded 
                       w-full text-white outline-none  px-3 py-2  resize-none" name="details">  </textarea>
                <!-- button create the task  -->
                <input class="mt-3  px-3 py-2 bg-blue-600 " type="submit" value="create task ">
            </form>


        </div>

        <!-- this is the pending work and anothe time you can done  -->
        <!-- <div> -->
            <!-- <a href="/another" class="text-3xl text-blue-600">another</a> -->
        <!-- </div> -->
        <!-- end of the from  -->

        <!-- this is the task start  -->
        <div class="tasks p-10 flex flex-wrap gap-3  ">
            <!-- this is the files data come files how many  -->
            <!-- files are greater than zero then go to for each  -->
            <% if (files.length> 0) { %>
                <!-- for each give you the file one name one by one val in  -->
                <% files.forEach(function (val) { %>
                    <!-- val is the file name  -->
                    <!-- Task -->
                    <div class="task w-72 px-4 py-4 rounded-md bg-zinc-800 text-white shadow-lg">
                        <!-- task title name come from the val  -->
                        <h1 class="text-3xl font-bold tracking-tight mb-3">
                            <%= val %>
                        </h1>
                        <!--this is the read the page go to antother route by dynamic   -->
                        <div class="flex justify-between w-full justify-center text-zinc-600 mt-3">
                            <a class="text-blue-600 cursor-pointer hover:underline" href="/file/<%= val %>">Read
                                more...</a>
                            <a class="" href="/edit/<%= val %>">edit filename</a>

                            <form method="POST" action="/delete/<%= val %>"
                                onsubmit="return confirm('Are you sure you want to delete this task?');"
                                style="display:inline;">
                                <button type="submit"
                                    class="text-black bg-red-600 hover:bg-red-700 rounded-md px-3 py-1">
                                    Delete
                                </button>
                            </form>

                            <!-- <form method="POST" action="/delete/<%= val %>" -->
                            <!-- onsubmit="return confirm('Are you sure you want to delete this file?');"> -->
                            <!-- <button type="submit" -->
                            <!-- class="text-red-300 bg-red-500 hover:bg-red-600 rounded-md px-3 py-1"> -->
                            <!-- Delete -->
                            <!-- </button> -->

                        </div>

                    </div>
                    <% }) %>
                        <% } else { %>
                            <!-- Message for no tasks -->
                            <h3 class="text-zinc-800 text-3xl">No tasks yet.</h3>
                            <% } %>
        </div>


    </div>
</body>

</html>

















